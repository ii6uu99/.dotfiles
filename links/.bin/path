PWD=`pwd`
#添加自定义的命令到环境变量
echo -e "export PATH=$PWD:$PATH" >> $HOME/.bashrc
#linux 文件批量赋予权限
#chmod -R 权限值 目录或文件
chmod -R 750 $PWD
source $HOME/.bashrchhh

#添加自定义的命令到环境变量
echo "export PATH=$HOME/.dotfiles/links/.bin:$PATH" >> $HOME/.bashrc
#linux 文件批量赋予权限
#chmod -R 权限值 目录或文件
chmod -R 750 $HOME/.dotfiles/links/.bin
source $HOME/.bashrc



#路径变量
dotfiles_dir=$HOME/.dotfiles

#切换到自定义bin文件夹
cd $HOME/.dotfiles/links/.bin
# 找到不同的文件夹
for d in $(find . ! -path . -type d); do
chmod -R 750 $HOME/.dotfiles/links/.bin/${d}
#添加自定义的命令到环境变量
echo "export PATH=$HOME/.dotfiles/links/.bin/${d}:$PATH" >> $HOME/.bashrc

done
# 创建文件的链接
for f in $(find . -type f); do
	src="$HOME/.dotfiles/links/$f"
	dst="$HOME/$f"
	if [ ! -f $dst ]; then
		echo "===> link $dst"
		ln -sf $src $dst
	else
		echo "--->$dst已存在,跳过"
	fi
done

